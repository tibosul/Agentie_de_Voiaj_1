/* Dark Theme */
QMainWindow {
    background-color: #2b2b2b;
    color: #ffffff;
}

QPushButton {
    background-color: #4a90e2;
    border: none;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    min-width: 80px;
    min-height: 32px;
}

QPushButton:hover {
    background-color: #357abd;
}

QPushButton:pressed {
    background-color: #2968a3;
}

/* Password visibility toggle buttons */
QPushButton#passwordVisibilityButton {
    background-color: #555555;
    border: 1px solid #777777;
    color: #ffffff;
    font-size: 16px;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
    border-radius: 6px;
    padding: 0px;
}

QPushButton#passwordVisibilityButton:hover {
    background-color: #666666;
    border-color: #888888;
}

QPushButton#passwordVisibilityButton:pressed {
    background-color: #444444;
}

QLineEdit {
    border: 2px solid #555;
    border-radius: 4px;
    padding: 10px;
    background-color: #3c3c3c;
    color: white;
    selection-background-color: #4a90e2;
    min-height: 25px;
    font-size: 14px;
}

QLineEdit:focus {
    border-color: #4a90e2;
}

QLabel {
    color: #ffffff;
}

QGroupBox {
    font-weight: bold;
    border: 2px solid #555555;
    border-radius: 8px;
    margin-top: 1.5ex;
    padding: 20px 15px 15px 15px;
    color: white;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 15px 0 15px;
    font-size: 14px;
}

QFrame.card {
    background-color: #3c3c3c;
    border: 1px solid #555;
    border-radius: 8px;
    padding: 16px;
    min-width: 280px;
    min-height: 180px;
}

QFrame.card:hover {
    border-color: #4a90e2;
}

QTabWidget::pane {
    border: 1px solid #555555;
    border-radius: 4px;
    background-color: #2b2b2b;
}

QTabBar::tab {
    background-color: #3c3c3c;
    color: white;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #4a90e2;
    color: white;
}

QTabBar::tab:hover {
    background-color: #505050;
}