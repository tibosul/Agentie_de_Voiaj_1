/* Dark Theme */
QMainWindow {
    background-color: #2b2b2b;
    color: #ffffff;
}

QPushButton {
    background-color: #4a90e2;
    border: none;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #357abd;
}

QPushButton:pressed {
    background-color: #2968a3;
}

QLineEdit {
    border: 2px solid #555;
    border-radius: 4px;
    padding: 8px;
    background-color: #3c3c3c;
    color: white;
    selection-background-color: #4a90e2;
}

QLineEdit:focus {
    border-color: #4a90e2;
}

QLabel {
    color: #ffffff;
}

QGroupBox {
    font-weight: bold;
    border: 2px solid #555555;
    border-radius: 8px;
    margin-top: 1ex;
    padding-top: 16px;
    color: white;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 10px 0 10px;
}

QFrame.card {
    background-color: #3c3c3c;
    border: 1px solid #555;
    border-radius: 8px;
    padding: 16px;
}

QFrame.card:hover {
    border-color: #4a90e2;
}

QTabWidget::pane {
    border: 1px solid #555555;
    border-radius: 4px;
    background-color: #2b2b2b;
}

QTabBar::tab {
    background-color: #3c3c3c;
    color: white;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #4a90e2;
    color: white;
}

QTabBar::tab:hover {
    background-color: #505050;
}