/* Light Theme */
QMainWindow {
    background-color: #f5f5f5;
    color: #333333;
}

QPushButton {
    background-color: #4a90e2;
    border: none;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    min-width: 80px;
    min-height: 32px;
}

QPushButton:hover {
    background-color: #357abd;
}

QPushButton:pressed {
    background-color: #2968a3;
}

/* Password visibility toggle buttons */
QPushButton#passwordVisibilityButton {
    background-color: #e8e8e8;
    border: 1px solid #cccccc;
    color: #333333;
    font-size: 16px;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
    border-radius: 6px;
    padding: 0px;
}

QPushButton#passwordVisibilityButton:hover {
    background-color: #d0d0d0;
    border-color: #999999;
}

QPushButton#passwordVisibilityButton:pressed {
    background-color: #c0c0c0;
}

QLineEdit {
    border: 2px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    background-color: white;
    color: #333333;
    selection-background-color: #4a90e2;
    min-height: 25px;
    font-size: 14px;
}

QLineEdit:focus {
    border-color: #4a90e2;
}

QLabel {
    color: #333333;
}

QGroupBox {
    font-weight: bold;
    border: 2px solid #cccccc;
    border-radius: 8px;
    margin-top: 1.5ex;
    padding: 20px 15px 15px 15px;
    color: #333333;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 15px 0 15px;
    color: #333333;
    font-size: 14px;
}

QFrame.card {
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 16px;
    color: #333333;
    min-width: 280px;
    min-height: 180px;
}

QFrame.card:hover {
    border-color: #4a90e2;
}

QTabWidget::pane {
    border: 1px solid #cccccc;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #e0e0e0;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    color: #333333;
}

QTabBar::tab:selected {
    background-color: #4a90e2;
    color: white;
}

QTabBar::tab:hover {
    background-color: #d0d0d0;
    color: #333333;
}